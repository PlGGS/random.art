{
  "tasks": {
    "build": "NODE_ENV=production react-router build",
    "dev": "deno task build && deno run -A --env --unstable-kv --watch=app,server.development.ts server.development.ts",
    "format": "deno fmt",
    "lint": "deno lint",
    "start": "deno run -A --env --unstable-kv ./server.production.ts",
    "typecheck": {
      "command": "deno check --node-modules-dir=auto '**/*'",
      "dependencies": ["typegen"]
    },
    "typegen": "react-router typegen"
  },
  "compilerOptions": {
    "lib": ["deno.window", "dom"],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "jsxImportSourceTypes": "@types/react",
    "rootDirs": [".", "./.react-router/types"],
    "types": ["vite/client"]
  },
  "unstable": ["sloppy-imports"],
  "exclude": ["build/"],
  "nodeModulesDir": "manual",
  "imports": {
    "~/": "./app/",
    "@std/http": "jsr:@std/http@^1.0.11",
    "@std/path": "jsr:@std/path@^1.0.8",
    "@std/encoding": "jsr:@std/encoding",
    "@std/crypto/crypto": "jsr:@std/crypto/crypto",
    "react": "npm:react@18",
    "react-dom": "npm:react-dom@18",
    "react-router": "npm:react-router@7",
    "react-router-dom": "npm:react-router-dom@7",
    "kv_oauth": "https://deno.land/x/deno_kv_oauth@v0.10.0"
  }
}
